# Server
NODE_ENV=production
PORT=3000
API_PREFIX=/api

# Database (RDS PostgreSQL)
DATABASE_HOST=your-rds-endpoint.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=file_storage
DATABASE_USER=admin
DATABASE_PASSWORD=strong_password_here
DATABASE_SSL=true

# Redis (ElastiCache)
REDIS_HOST=your-elasticache-endpoint.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here

# AWS S3
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET=your-production-bucket
S3_UPLOAD_BUCKET=your-upload-bucket
S3_FORCE_PATH_STYLE=false

# CDN (CloudFront)
CDN_DOMAIN=your-cdn-domain.cloudfront.net
CDN_ENABLED=true

# JWT
JWT_SECRET=use-strong-random-secret-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Upload
MAX_FILE_SIZE=5368709120
CHUNK_SIZE=10485760
UPLOAD_SESSION_EXPIRES=86400

# Rate Limiting (生产环境严格限制)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Storage Quotas
DEFAULT_USER_QUOTA=10737418240

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Swagger (生产环境建议禁用)
SWAGGER_ENABLED=false
