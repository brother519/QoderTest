# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# MongoDB
MONGODB_URI=mongodb://localhost:27017/file-storage
MONGODB_DB_NAME=file-storage

# AWS Credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration
S3_BUCKET_PUBLIC=my-public-files
S3_BUCKET_PRIVATE=my-private-files
S3_BUCKET_TEMP=my-temp-files

# CloudFront
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your_key_pair_id
CLOUDFRONT_PRIVATE_KEY_PATH=./secrets/cloudfront-private-key.pem

# Upload Configuration
MAX_FILE_SIZE=5368709120
MAX_CHUNK_SIZE=104857600
ALLOWED_MIME_TYPES=image/*,video/*,application/pdf,application/zip

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Temporary File Settings
TEMP_FILE_EXPIRY=86400

# Thumbnail Configuration
THUMBNAIL_SIZES=150,300,600
THUMBNAIL_FORMAT=webp
THUMBNAIL_QUALITY=80

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3001,https://yourdomain.com
