PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/auth-system

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-this-too
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
SECURITY_ANSWER_SECRET=your-secret-for-security-questions
BCRYPT_ROUNDS=12

# Rate Limiting
LOGIN_RATE_LIMIT=5
PASSWORD_RESET_RATE_LIMIT=3

# Logging
LOG_LEVEL=info
