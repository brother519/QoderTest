# 应用配置
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# 数据库配置
DATABASE_URL=postgres://shortlink:password@postgres:5432/shortlink
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# 缓存配置（单位：秒）
CACHE_TTL_SHORT_URL=3600
CACHE_TTL_ANALYTICS=1800
CACHE_TTL_RANKING=28800

# 速率限制（请求数/分钟）
RATE_LIMIT_CREATE=10
RATE_LIMIT_QUERY=100
RATE_LIMIT_REDIRECT=1000

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 短代码配置
SHORT_CODE_LENGTH=6
